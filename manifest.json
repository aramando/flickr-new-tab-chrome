{
  "name": "Flickr New Tab",
  "description": "Load the new tab page with a photo from Flickr Stream",
  "version": "1.0",
  "incognito": "split",
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html",
    "default_title": "Configure Flickr Tags"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": ["tabs"],
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
    },
  "manifest_version": 2
}
